@model SignupLogin.Models.ViewModel.LoginSignUpViewModel;
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-4 offset-3 border border-primary rounded p-lg-5 pr-5 pb-5">
            <div class="form-center">
                <h2>User Registration</h2>
            </div>
            <form method="post" asp-action="SignUp">
                <div class="form-group">
                <label asp-for="UserName"></label>
                <input type="text" asp-for="UserName" class="form-control" placeholder="Enter your name"/>
                </div>
                <div class="form-group">
                <label asp-for="Email"></label>
                <input type="text" asp-for="Email" class="form-control" placeholder="Enter your name"/>
                </div>
                <div class="form-group">
                <label asp-for="Mobile"></label>
                <input type="text" asp-for="Mobile" class="form-control" placeholder="Enter your name"/>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="text" asp-for="Password" class="form-control" placeholder="Enter your name" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input type="text" asp-for="ConfirmPassword" class="form-control" placeholder="Enter your name" />
                </div>
                <div class="form-group">
                   
                    <input type="submit" value="Registration" class="btn btn-success btn-sm  float-right"  />
                </div>
            </form>

        </div>

    </div>

</div>


